<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pmovil.camiluz.cinesmagic.SinopsisFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:context="com.pmovil.camiluz.cinesmagic.ReservasFragment">

        <LinearLayout
            android:id="@+id/contenedor_izquierdo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cartel_reservas_imagen"
                android:layout_width="170dp"
                android:layout_height="251dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/cartel_ghost" />

            <Button
                android:id="@+id/boton_dia_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="2"
                android:background="#3F51B5"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/white"
                tools:text="Dic 18" />

            <Button
                android:id="@+id/boton_dia_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#3F51B5"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/white"
                tools:text="Abr 15" />

            <Button
                android:id="@+id/boton_dia_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="2"
                android:background="#3F51B5"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/white"
                tools:text="Abr 16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Elija un dÃ­a"
                android:textAppearance="?android:textAppearanceSmall" />
        </LinearLayout>

        <TextView
            android:id="@+id/titulo_pelicula"
            android:layout_width="match_parent"
            android:layout_height="251dp"
            android:layout_toRightOf="@id/contenedor_izquierdo"
            android:gravity="center"
            android:padding="8dp"
            tools:text="Ghost in the Shell (3D)"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/selector_de_dias"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>
    </RelativeLayout>
</ScrollView>